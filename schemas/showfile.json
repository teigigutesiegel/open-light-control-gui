{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/teigigutesiegel/open-light-control-gui/master/schemas/showfile.json",
    "title": "Showfile for Open-Light-Control",
    "description": "the Showfile saves the current state of a show, so that it can be restored",
    "type": "object",
    "properties": {
        "fixtures": {
            "type": "array",
            "description": "patched fixtures",
            "items": {
                "type": "object",
                "description": "a patched fixture",
                "properties": {
                    "num": {
                        "type": "number",
                        "description": "internal number of the fixture"
                    },
                    "type": {
                        "type": "string",
                        "description": "fixture type format manufacturer/type"
                    },
                    "mode": {
                        "type": "string",
                        "description": "name of the selected mode"
                    },
                    "addresses": {
                        "type": "array",
                        "description": "DMX Addresses of the Fixture",
                        "items": {
                            "type": "object",
                            "description": "Dmx Address",
                            "properties": {
                                "universe": {
                                    "type": "integer",
                                    "description": "Universe of the DMX Address"
                                },
                                "address": {
                                    "type": "integer",
                                    "description": "Address of the DMX Address"
                                }
                            }
                        },
                        "minItems": 1
                    }
                },
                "required": ["num", "type", "mode"]
            }
        },
        "groups": {
            "type": "array",
            "description": "added groups",
            "items": {
                "type": "object",
                "description": "a group",
                "properties": {
                    "num": {
                        "type": "integer",
                        "description": "internal group number"
                    },
                    "name": {
                        "type": "string",
                        "description": "name of the group"
                    },
                    "lamps": {
                        "type": "array",
                        "description": "group members",
                        "items": {
                            "type": "integer",
                            "description": "number of lamp"
                        }
                    },
                    "groups": {
                        "type": "array",
                        "description": "group members",
                        "items": {
                            "type": "integer",
                            "description": "number of group"
                        }
                    },
                    "color": {
                        "type": "array",
                        "description": "RGB Tuple",
                        "items": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 255
                        },
                        "minItems": 3,
                        "maxItems": 3
                    }
                },
                "required": ["num", "name"]
            }
        },
        "intensities": { "$ref": "#/StateList" },
        "positions": { "$ref": "#/StateList" },
        "colors": { "$ref": "#/StateList" },
        "beams": { "$ref": "#/StateList" }
    },
    "StateList": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "num": { "type": "integer" },
                "name": { "type": "string" },
                "state": { "$ref": "#/LampState" }
            }
        }
    },
    "LampState": {
        "type": "object",
        "properties": {
            "Intensity": {
                "type": "object",
                "properties": {
                    "Intensity": { "type": "number" },
                    "Intensity2": { "type": "number" },
                    "Smoke": { "type": "number" },
                    "Fan": { "type": "number" },
                    "Strobe": { "type": "string" }
                }
            },
            "Position": {
                "type": "object",
                "properties": {
                    "Pan": { "type": "string" },
                    "Tilt": { "type": "string" },
                    "PosTime": { "type": "string" }
                }
            },
            "Color": {
                "type": "object",
                "properties": {
                    "Hue": { "type": "number" },
                    "Saturation": { "type": "number" },
                    "Red": { "type": "integer" },
                    "Green": { "type": "integer" },
                    "Blue": { "type": "integer" },
                    "Slot": { "type": "string" },
                    "Slot2": { "type": "string" },
                    "ColorFx": { "type": "string" }
                }
            },
            "Beam": {
                "type": "object",
                "properties": {
                    "Gobo": { "type": "string" },
                    "GoboRot": { "type": "string" },
                    "GoboShake": { "type": "string" },
                    "Gobo2": { "type": "string" },
                    "Gobo2Rot": { "type": "string" },
                    "Gobo2Shake": { "type": "string" },
                    "Focus": { "type": "string" },
                    "Prism": { "type": "string" },
                    "PrismRot": { "type": "string" },
                    "PrismShake": { "type": "string" }
                }
            },
            "Maintenance": {
                "type": "object"
            }
        }
    }
}
